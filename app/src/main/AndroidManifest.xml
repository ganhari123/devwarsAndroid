<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bukbukbukh.movierating">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".WelcomeScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <dependency>
            <groupId>
                com.github.kevinsawicki
            </groupId>

            <artifactId>
                http-request
            </artifactId>

            <version>
                6.0
            </version>
        </dependency>

        <activity
            android:name=".Login_screen"
            android:label="@string/title_activity_login_screen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name=".Register_screen"
            android:label="@string/title_activity_register_screen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_main_menu" />
        <activity
            android:name=".ProfilePage"
            android:label="@string/title_activity_profile_page" />
        <activity
            android:name=".SearchPages"
            android:label="@string/title_activity_search_pages" />
        <activity
            android:name=".MainProfilePage"
            android:label="@string/title_activity_main_profile_page" />
        <activity
            android:name=".RateMovie"
            android:label="@string/title_activity_rate_movie" />
        <activity
            android:name=".RecentlyRated"
            android:label="@string/title_activity_recently_rated" />
        <activity
            android:name=".AdminHome"
            android:label="@string/title_activity_admin_home" />
        <activity
            android:name=".UserMod"
            android:label="@string/title_activity_user_mod" />
        <activity
            android:name=".UserStatus"
            android:label="@string/title_activity_user_status" />
        <activity
            android:name=".Home_Screen"
            android:label="@string/title_activity_home__screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
