<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bukbukbukh.movierating.MainMenu">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="logout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/disp_username"
        android:layout_alignTop="@+id/logout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/profile_page"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goProfilePage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Movies"
        android:id="@+id/search_movie"
        android:onClick="searchMoviesPage"
        android:layout_below="@+id/searchMovie"
        android:layout_toLeftOf="@+id/disp_username"
        android:layout_toStartOf="@+id/disp_username" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieSearchResult"
        android:layout_below="@+id/new_dvds"
        android:layout_toStartOf="@+id/new_dvds"
        android:layout_toLeftOf="@id/new_dvds"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:hint="Movie Search"
        android:id="@+id/searchMovie"
        android:layout_below="@+id/profile_page"
        android:layout_alignLeft="@+id/search_movie"
        android:layout_alignStart="@+id/search_movie" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Releases"
        android:id="@+id/new_releases"
        android:layout_below="@+id/searchMovie"
        android:layout_toRightOf="@+id/search_movie"
        android:layout_toEndOf="@+id/search_movie"
        android:onClick="searchNewRel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New DVD's"
        android:id="@+id/new_dvds"
        android:layout_below="@+id/searchMovie"
        android:layout_toRightOf="@+id/new_releases"
        android:layout_toEndOf="@+id/new_releases"
        android:onClick="searchNewDVD"/>

</RelativeLayout>
